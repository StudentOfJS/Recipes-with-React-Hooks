{
  "parser": "babel-eslint",
  "plugins": ["react-hooks", "jest"],
  "extends": ["prettier", "airbnb"],
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "globals": {
    "API_URL": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react/jsx-filename-extension": 0,
    "object-curly-newline": 0,
    "arrow-parens": 0
  }
}
